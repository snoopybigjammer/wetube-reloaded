extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Log in")
        br

        div.social-login
            a(href="/users/github/start").social__btn.social__btn
                i.fab.fa-github
                |  continue with github &rarr;
            br
            a(href="/users/kakao/start").social__btn.social__btn
                i.fa-solid.fa-comments 
                |  continue with kakao talk &rarr;
    hr
    div.auto-switch
        span Don't have an account?
        a(href="/join") join now &rarr;


